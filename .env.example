# Local chatbot eval endpoint
CHATBOT_URL=http://localhost:3000/eval/chat

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Optional overrides
CHATBOT_FIELD=message
CHATBOT_ANSWER_FIELD=answer
CHATBOT_THREAD_ID_FIELD=threadId

CHATBOT_MAX_FOLLOWUP_TURNS=3
CHATBOT_RESPONSE_SEPARATOR=\n---\n

# AZURE_SCOPE defaults to https://graph.microsoft.com/.default; set to your API scope if needed (e.g. api://your-app-id/.default).
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret